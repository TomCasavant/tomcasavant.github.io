---
layout: layouts/base.njk
permalink: "{{ title | slugify }}/"
---

{% block content %}
<article class="h-entry">
    <h1 class="p-name">{{ title }}</h1>

    <ul class="post-metadata">
        <li><time class="dt-published" datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time></li>
        {%- for tag in tags | filterTagList %}
        {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
        <li><a href="{{ tagUrl }}" class="p-category post-tag">{{ tag }}</a>{%- if not loop.last %}, {% endif %}</li>
        {%- endfor %}
    </ul>

    <div class="e-content">
        {{ content | safe }}
    </div>

    {%- if collections.posts %}
    {%- set previousPost = collections.posts | getPreviousCollectionItem %}
    {%- set nextPost = collections.posts | getNextCollectionItem %}
    {%- if nextPost or previousPost %}
    <ul class="links-nextprev">
        {%- if previousPost %}<li>Previous: <a href="{{ previousPost.url }}" class="u-url">{{ previousPost.data.title }}</a></li>{% endif %}
        {%- if nextPost %}<li>Next: <a href="{{ nextPost.url }}" class="u-url">{{ nextPost.data.title }}</a></li>{% endif %}
    </ul>
    {%- endif %}
    {%- endif %}

    <section>  
        <h2>Webmentions</h2>  
        {% set webmentionUrl %}
        {{ page.url | url | absoluteUrl(site.url) }}
        {% endset %}
        {% include 'webmentions.njk' %}
    </section>
    <a class="u-bridgy-fed" href="https://fed.brid.gy/" hidden="from-humans"></a>
</article>
{% endblock %}
