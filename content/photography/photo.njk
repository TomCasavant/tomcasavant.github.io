---
layout: layouts/base.njk
pagination:
  data: collections.photography
  size: 1
  alias: photo
title: "Photo"
permalink: /photography/{{ photo.file | splitPath | slug }}/
---

<div class="image-container h-entry">
  {% set photoPath = 'photos/' + photo.file %}
  {% image photoPath, "" %}
  <div class="e-content">
    <p><time class="dt-published">{{ photo.datetime | formatDate }}</time></p>
    <p>{{ photo.width }}x{{ photo.height }}</p>
    <p>{{ photo.model }}</p>
    <p>Shutter Speed: {{ photo.exposure_time | formatExposureTime }}</p>
    <p>Aperture: f/{{ photo.f_number }}</p>
    <p>ISO: {{ photo.photographic_sensitivity }}</p>
    <p>Focal Length: {{ photo.focal_length }} mm</p>
    <p>Lens Model: {{ photo.lens_model }}</p>
  </div>
  <a class="u-bridgy-fed" href="https://fed.brid.gy/" hidden="from-humans"></a>
</div>
<style>

  .image-container {
    text-align: center;
  }
  .image-container img {
    display: block;
    margin-left: auto;
    margin-right: auto;
    max-width: 100%;
    height: auto;
    border: 2px solid #000; /* Optional: Add border */
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Optional: Add shadow */
  }
  .image-container p:first-of-type {
    margin-top: 10px; /* Optional: Add margin to the date */
  }

	p {
	  line-height: 0.45;
	}
</style>
